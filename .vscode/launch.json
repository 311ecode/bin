{
  "version": "2.0.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Debug configutationProcessor.mjs",
      "program": "${workspaceFolder}/configutationProcessor.mjs",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "-c",
        "/home/imre/Documents/obsidian-docs/Language/Dutch/translations/Márai/Napló/1945-1957/verses/configNewStructure.yml"
      ],
      "console": "integratedTerminal"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Run all tests",
      "runtimeArgs": [
        "--experimental-vm-modules"
      ],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Debug Vite React",
      "runtimeExecutable": "${workspaceFolder}/debug_vite_react.sh",
      "cwd": "${workspaceFolder}",
      "env": {
        "BROWSER": "none"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }

  ]
}